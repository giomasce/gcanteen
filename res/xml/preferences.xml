<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference 
        android:key="pref_username"
        android:title="@string/username_hint"
        android:summary="@string/username_summary"
        android:inputType="textNoSuggestions"/>
    <EditTextPreference 
        android:key="pref_password"
        android:title="@string/password_hint"
        android:summary="@string/password_summary"
        android:inputType="textPassword"/>
    <ListPreference 
        android:key="pref_provider"
        android:title="@string/provider_hint"
        android:summary="@string/provider_summary"
        android:entries="@array/provider_entries"
        android:entryValues="@array/provider_entry_values"/>
</PreferenceScreen>